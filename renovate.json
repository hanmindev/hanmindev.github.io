{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ],
      "enabled": false
    },
    {
      "automerge": true,
      "matchManagers": ["git-submodules"]
    }
  ]
}
