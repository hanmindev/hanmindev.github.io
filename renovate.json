{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "enabled": false,
      "matchManagers": ["npm", "github-actions"]
    },
    {
      "enabled": true,
      "automerge": true,
      "ignoreTests": true,
      "matchManagers": ["git-submodules"]
    }
  ]
}
