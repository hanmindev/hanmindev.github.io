{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "enabled": false,
      "matchManagers": ["npm"],
      "matchPackageNames": ["*"]
    },
    {
      "enabled": true,
      "matchManagers": ["git-submodules"],
      "matchPackageNames": ["*"]
    }
  ]
}
